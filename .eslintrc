{
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"root": true,
	"extends": [
		"airbnb-base",
		"airbnb-typescript/base",
		"prettier"
	],
	"plugins": [
		"prettier",
		"import"
	],
	"ignorePatterns": [
		"dist/*",
		".eslintrc",
		"*.mjs"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"endOfLine": "auto",
				"useTabs": true
			}
		],
		"class-methods-use-this": "off",
		"no-param-reassign": "off",
		"no-console": "off",
		"camelcase": "off",
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "next"
			}
		],
		"@typescript-eslint/no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "next"
			}
		],
		"import/no-unresolved": "error",
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		]
	},
	"settings": {
		"import/parsers": {
			"@typescript-eslint/parser": [
				".ts",
				".tsx"
			]
		},
		"import/resolver": {
			"typescript": {
				"alwaysTryTypes": true
			}
		}
	}
}
